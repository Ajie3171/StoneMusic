<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.LocalListActivity">
    <!--顶部 本地音乐-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:subtitleTextAppearance="@style/toolbar_subtitle"
        app:titleTextAppearance="@style/toolbar_title"
        android:layout_alignParentTop="true"
        android:background="@color/color0">
    </android.support.v7.widget.Toolbar>
    <!--分割线-->
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/toolBar"
        android:background="#33ffffff"/>

    <!--中间旋转图片部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:paddingTop="50dp"
        android:layout_below="@+id/line"
        android:layout_above="@+id/musicTime"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/music_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/musicTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/tvCurrentTime"
            style="@style/music_time_text_style"
            android:layout_alignLeft="@id/musicSeekBar"
            android:layout_centerVertical="true"
            tools:text="01:34"/>

        <SeekBar
            android:id="@+id/musicSeekBar"
            style="@style/music_time_seek_bar_style"
            android:layout_centerInParent="true"
            android:paddingEnd="40dp"
            android:paddingStart="40dp"
            />

        <TextView
            android:id="@+id/tvTotalTime"
            style="@style/music_time_text_style"
            android:layout_alignRight="@id/musicSeekBar"
            android:layout_centerVertical="true"
            tools:text="05:34"/>
    </RelativeLayout>

    <!--下部导航按钮-->
    <LinearLayout
        android:id="@+id/controlOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:alpha="0.2"
        android:gravity="center"
        android:padding="@dimen/dp_20dp">
        <ImageButton
            android:id="@+id/button_last"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_last_black"
            />

        <ImageButton
            android:id="@+id/button_play"
            android:layout_width="90dp"
            android:layout_height="90dp"
            />

        <ImageButton
            android:id="@+id/button_next"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_next_black"
            />
    </LinearLayout>
</LinearLayout>